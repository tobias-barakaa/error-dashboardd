---
// No server-side code needed! Pure client-side
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Error Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-gray-100 min-h-screen">
  <!-- Navigation -->
  <nav class="bg-gray-800 border-b border-gray-700">
    <div class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <h1 class="text-xl font-bold">ðŸš¨ Zelisline Error Dashboard</h1>
        <div class="flex items-center gap-4">
          <span id="lastUpdate" class="text-sm text-gray-400"></span>
          <div class="w-2 h-2 rounded-full bg-green-500" id="status"></div>
        </div>
      </div>
    </div>
  </nav>

  <div class="container mx-auto px-4 py-8">
    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
      <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
        <div class="text-3xl font-bold" id="totalCount">0</div>
        <div class="text-sm text-gray-400">Total Logs</div>
      </div>
      <div class="bg-blue-900 rounded-lg p-6 border border-blue-700">
        <div class="text-3xl font-bold" id="infoCount">0</div>
        <div class="text-sm text-blue-300">Info</div>
      </div>
      <div class="bg-yellow-900 rounded-lg p-6 border border-yellow-700">
        <div class="text-3xl font-bold" id="warnCount">0</div>
        <div class="text-sm text-yellow-300">Warnings</div>
      </div>
      <div class="bg-red-900 rounded-lg p-6 border border-red-700">
        <div class="text-3xl font-bold" id="errorCount">0</div>
        <div class="text-sm text-red-300">Errors</div>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-gray-800 rounded-lg p-6 mb-6 border border-gray-700">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <label class="block text-sm mb-2">Level</label>
          <select id="levelFilter" class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2">
            <option value="">All</option>
            <option value="info">Info</option>
            <option value="warn">Warning</option>
            <option value="error">Error</option>
          </select>
        </div>
        <div>
          <label class="block text-sm mb-2">Source</label>
          <input type="text" id="sourceFilter" placeholder="e.g., users.createUser" class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2" />
        </div>
        <div>
          <label class="block text-sm mb-2">Trace ID</label>
          <input type="text" id="traceFilter" placeholder="Search trace" class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2" />
        </div>
        <div class="flex items-end">
          <button id="refreshBtn" class="w-full bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded">Refresh</button>
        </div>
      </div>
      <div class="mt-4">
        <label class="flex items-center gap-2">
          <input type="checkbox" id="autoRefresh" checked />
          <span class="text-sm">Auto-refresh (5s)</span>
        </label>
      </div>
    </div>

    <!-- Logs Table -->
    <div class="bg-gray-800 rounded-lg overflow-hidden border border-gray-700">
      <table class="w-full">
        <thead class="bg-gray-700">
          <tr>
            <th class="px-4 py-3 text-left text-xs uppercase">Time</th>
            <th class="px-4 py-3 text-left text-xs uppercase">Level</th>
            <th class="px-4 py-3 text-left text-xs uppercase">Source</th>
            <th class="px-4 py-3 text-left text-xs uppercase">Message</th>
            <th class="px-4 py-3 text-left text-xs uppercase">Trace</th>
          </tr>
        </thead>
        <tbody id="logsTable" class="divide-y divide-gray-700"></tbody>
      </table>
      <div id="noLogs" class="text-center py-12 text-gray-400 hidden">
        <p>No logs found</p>
      </div>
    </div>

    <!-- Modal -->
    <div id="modal" class="hidden fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center p-4">
      <div class="bg-gray-800 rounded-lg max-w-4xl w-full max-h-[90vh] overflow-auto p-6">
        <div class="flex justify-between mb-4">
          <h2 class="text-2xl font-bold">Log Details</h2>
          <button id="closeModal" class="text-3xl">&times;</button>
        </div>
        <div id="modalContent"></div>
      </div>
    </div>
  </div>

  <script>
    const API_URL = 'https://skool.zelisline.com/api/logs'; // Your NestJS API
    let logs = [];
    let autoRefreshInterval;

    function getLevelColor(level) {
      return level === 'error' ? 'text-red-400' : level === 'warn' ? 'text-yellow-400' : 'text-blue-400';
    }

    function formatTime(timestamp) {
      const date = new Date(timestamp);
      const now = new Date();
      const diff = now - date;
      if (diff < 60000) return 'Just now';
      if (diff < 3600000) return `${Math.floor(diff/60000)}m ago`;
      return date.toLocaleString();
    }

    function updateStats(data) {
      document.getElementById('totalCount').textContent = data.total || 0;
      document.getElementById('infoCount').textContent = data.stats?.info || 0;
      document.getElementById('warnCount').textContent = data.stats?.warn || 0;
      document.getElementById('errorCount').textContent = data.stats?.error || 0;
    }

    function renderLogs(logsData) {
      const tbody = document.getElementById('logsTable');
      const noLogs = document.getElementById('noLogs');
      
      if (!logsData || logsData.length === 0) {
        tbody.innerHTML = '';
        noLogs.classList.remove('hidden');
        return;
      }
      
      noLogs.classList.add('hidden');
      tbody.innerHTML = logsData.map(log => `
        <tr class="hover:bg-gray-700 cursor-pointer" onclick="showLog('${log.id}')">
          <td class="px-4 py-3 text-sm">${formatTime(log.timestamp)}</td>
          <td class="px-4 py-3 text-sm">
            <span class="px-2 py-1 rounded text-xs font-medium ${getLevelColor(log.level)}">
              ${log.level.toUpperCase()}
            </span>
          </td>
          <td class="px-4 py-3 text-sm font-mono text-purple-400">${log.source}</td>
          <td class="px-4 py-3 text-sm truncate max-w-md">${log.message}</td>
          <td class="px-4 py-3 text-sm font-mono text-gray-500">${log.traceId.substring(0,8)}...</td>
        </tr>
      `).join('');
    }

    window.showLog = (id) => {
      const log = logs.find(l => l.id === id);
      if (!log) return;

      document.getElementById('modalContent').innerHTML = `
        <div class="space-y-4">
          <div><strong>Trace ID:</strong> <code class="bg-gray-900 px-2 py-1 rounded">${log.traceId}</code></div>
          <div><strong>Time:</strong> ${new Date(log.timestamp).toLocaleString()}</div>
          <div><strong>Level:</strong> <span class="${getLevelColor(log.level)}">${log.level.toUpperCase()}</span></div>
          <div><strong>Source:</strong> <code class="bg-gray-900 px-2 py-1 rounded">${log.source}</code></div>
          <div><strong>Origin:</strong> <code class="bg-gray-900 px-2 py-1 rounded text-green-400">${log.origin || 'N/A'}</code></div>
          <div><strong>Message:</strong> ${log.message}</div>
          ${log.metadata ? `<div><strong>Metadata:</strong><pre class="bg-gray-900 p-4 rounded overflow-x-auto text-sm">${JSON.stringify(log.metadata, null, 2)}</pre></div>` : ''}
        </div>
      `;
      document.getElementById('modal').classList.remove('hidden');
    };

    document.getElementById('closeModal').addEventListener('click', () => {
      document.getElementById('modal').classList.add('hidden');
    });

    async function fetchLogs() {
      const params = new URLSearchParams();
      const level = document.getElementById('levelFilter').value;
      const source = document.getElementById('sourceFilter').value;
      const traceId = document.getElementById('traceFilter').value;
      
      if (level) params.append('level', level);
      if (source) params.append('source', source);
      if (traceId) params.append('traceId', traceId);
      params.append('limit', '100');

      try {
        const response = await fetch(`${API_URL}?${params}`);
        const data = await response.json();
		console.log('Fetched logs data:', data);

        logs = data.logs || [];
        updateStats(data);
        renderLogs(logs);
        document.getElementById('status').className = 'w-2 h-2 rounded-full bg-green-500';
      } catch (err) {
        console.error('Failed to fetch logs:', err);
        document.getElementById('status').className = 'w-2 h-2 rounded-full bg-red-500';
      }
    }

    document.getElementById('refreshBtn').addEventListener('click', fetchLogs);
    document.getElementById('levelFilter').addEventListener('change', fetchLogs);
    document.getElementById('sourceFilter').addEventListener('input', () => {
      clearTimeout(window.filterTimeout);
      window.filterTimeout = setTimeout(fetchLogs, 500);
    });
    document.getElementById('traceFilter').addEventListener('input', () => {
      clearTimeout(window.filterTimeout);
      window.filterTimeout = setTimeout(fetchLogs, 500);
    });

    document.getElementById('autoRefresh').addEventListener('change', (e) => {
      if (e.target.checked) {
        autoRefreshInterval = setInterval(fetchLogs, 5000);
      } else {
        clearInterval(autoRefreshInterval);
      }
    });

    function updateTime() {
      document.getElementById('lastUpdate').textContent = `Updated: ${new Date().toLocaleTimeString()}`;
    }

    fetchLogs();
    updateTime();
    setInterval(updateTime, 1000);
    autoRefreshInterval = setInterval(fetchLogs, 5000);
  </script>
</body>
</html>